{
    "apiVersion": "argoproj.io/v1alpha1",
    "kind": "Application",
    "metadata": {
        "name": "mesapi",
        "namespace": "argocd",
        "finalizers": [
            "resources-finalizer.argocd.argoproj.io"
        ]
    },
    "spec": {
        "project": "default",
        "destination": {
            "name": "zeus-cluster",
            "namespace": "mesapi"
        },
        "source": {
            "path": "helm/src/mes-api",
            "repoURL": "https://github.com/plagueworks-org/k8-apps",
            "targetRevision": "main"
        },
        "syncPolicy": {
            "automated": {
                "prune": true,
                "selfHeal": true
            },
            "syncOptions": [
                "RespectIgnoreDifferences=true",
                "ServerSideApply=true",
                "Replace=true"
            ]
        }
    }
}